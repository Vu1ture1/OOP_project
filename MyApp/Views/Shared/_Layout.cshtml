        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            
            
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Access" asp-action="Login"><i class="fas fa-sign-in-alt"></i> Войти</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Access" asp-action="Registration"><i class="fas fa-user-plus"></i> Зарегистрироваться</a>
                </li>
            </ul>
        </div>
    </nav>
        
<div class="left-nav">
    <nav>


            <a class="nav-link text-dark" style="font-size: 15px;" asp-area="" asp-controller="Theme" asp-action="Index"><i class="fa-solid fa-compass"></i> Темы</a>
            <a class="nav-link text-dark" style="font-size: 15px;" asp-area="" asp-controller="Information" asp-action="Subs"><i class="fa-solid fa-folder-open"></i> Подписки</a>
            <a class="nav-link text-dark" style="font-size: 15px;" asp-area="" asp-controller="Information" asp-action="Likes"><i class="fa-solid fa-heart"></i> Понравившиеся</a>


            
            @* <a class="nav-link text-dark" asp-area="" asp-controller="Access" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a> *@

    </nav>
</div>

    


